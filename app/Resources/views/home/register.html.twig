{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12 text-center">
                {% if error is defined and error != '' %}
                    <div class="alert alert-danger">{{ error }}</div>
                {% endif %}
                <h1>Fill the fields in order to register</h1>
                <div class="col-sm-3"></div>
                <div class="col-sm-6">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                </div>
                <div class="col-sm-3"></div>
            </div>
        </div>
    </div>
{% endblock %}